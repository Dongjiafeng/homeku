package com.lanou3g.homework;

import java.util.Scanner;

public class Demo {
	public static void main(String[] args) {
		

	Scanner input = new Scanner(System.in);
	System.out.println("请输入宠物名称:");
	
	String pet = input.nextLine();	
	
	System.out.println("请选择宠物类型: " );
	
	System.out.println("1.狗狗    2.企鹅");
	int poodle = input.nextInt();
	switch(poodle){
	case 1:
		System.out.println("请选择你狗狗的品种:");
		System.out.println("1.聪明的拉布拉多犬    2.酷酷的雪纳瑞");
		int breed = input.nextInt();
		switch(breed){
		case 1:
			System.out.println("你选择的是聪明拉布拉多犬");
			String dog1 = "聪明拉布拉多犬";
			break;
		case 2 :
			System.out.println("你选择的酷酷的雪纳瑞");
			String dog2 ="酷酷的雪纳瑞";
			break;
		}
		break;
		
	case 2:
		System.out.println("请选择你企鹅的类别:");
		System.out.println("1.Q仔   2.Q妹");
		int  penguin = input.nextInt();
		
		switch(penguin){
		case 1:
			System.out.println("你选择的是Q仔");
			String penguin1 = "Q仔";
			break;
		case 2 :
			System.out.println("你选择的是Q妹");
			String penguin2 ="Q妹";
			break;
		}
		break;
	  
		
	}
	
	
	}

}
